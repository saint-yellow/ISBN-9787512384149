@using WindowsOnly.Models.ViewModels;

@model List<CategoryViewModel>

@{ 
    var selectedCategoryId = ViewBag.SelectedCategoryId;
}


<div class="list-group">
    <h4 class="list-group-item-heading">Categories</h4>
    @foreach (CategoryViewModel category in Model)
    {
        if (selectedCategoryId == category.Id)
        {
            <a href="@Url.Action("Index", "Books", new { categoryId = category.Id })" class="list-group-item active">@category.Name</a>
        }
        else
        {
            <a href="@Url.Action("Index", "Books", new { categoryId = category.Id })" class="list-group-item">@category.Name</a>
        }
    }
</div>